/* 含最初格式,zhong格式,网络极简配置，settings 10个高阶配置 */

{
    "breadcrumbs.enabled": true, // 开启 vscode 文件路径导航
    "bracketPairColorizer.depreciation-notice": false,

    "css.lint.ieHack": "warning",
    //css格式化，以下3行
    "css.validate": false,
    "stylelint.enable":true,
    "[css]":{
        "editor.suggest.insertMode":"replace" //css提示时，tab或者enter替换已写好的
    },

    "code-runner.saveFileBeforeRun": true,
    "code-runner.clearPreviousOutput": true,
    "code-runner.runInTerminal": true,

    "dart.closingLabels": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.maxComputationTime": 0,
    "debug.onTaskErrors": "abort",
    "dynamicFormEditor.src": "https://form-editor-qa.medlinker.com",
    "dart.checkForSdkUpdates": false,
    

    "easysass.targetDir": "./css",
    // 被称为魔法编程，非常强大的功能，保存执行，自动修复
    "editor.codeActionsOnSave": {
        "source.fixAll": true,
        "addMissingImports":true
    },
   /*  "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true,
        "source.fixAll.styleslint": true,
        "source.fixAll.tslint": true
    }, */
    "editor.wordWrap": "on",
    "editor.mouseWheelZoom": true,
    "explorer.incrementalNaming": "smart",
    "editor.fontSize": 14,// 字体大小，单位像素，默认14
    "editor.tabSize": 2,// tab键宽度，默认4，空格为2
    "editor.fontFamily": "Dank Mono, Menlo, Monaco, 'Courier New', monospace",
    "editor.minimap.maxColumn": 60,// 右侧缩略图宽度，单位像素
    "editor.minimap.scale": 1,// 缩略图显示比列123
    "editor.formatOnSave": true, // 每次保存的时候自动格式化
    "editor.minimap.enabled": true, // 是否显示右侧快速预览
    "editor.lineHeight": 22, //设置代码行高
    "editor.detectIndentation": false, //  vscode默认启用了根据文件类型自动设置tabsize的选项
    "editor.copyWithSyntaxHighlighting": false,
    "editor.quickSuggestions": {
        "strings": true
    },
   
    "explorer.confirmDragAndDrop": false,//文件拖拽不需要确认，false：需要确认
    "explorer.confirmDelete": false,//文件删除不需要确认,fasle:需要确认
    "extensions.ignoreRecommendations": true,
    "editor.rulers": [ 120 ], //编辑器单行长度
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "eslint.enable": true, //是否开启vscode的eslint
    "eslint.alwaysShowStatus": true,
    "eslint.validate": [ // 配置 ESLint 检查的文件类型
      "markdown",
      "mdx",
      "javascript",
      "javascriptreact",
      "typescript",
      "typescriptreact",
      "html",
      "vue"
    ],
    "eslint.options": {
        //指定vscode的eslint所处理的文件的后缀
        "extensions": [".js", ".vue", ".ts", ".tsx"]
    },
      

    // Emmet工具包（内置与vscode，但必须手动配置启用）
    "emmet.includeLangusges":{
        "postcss":"css",
        "javascript":"javascriptreact",
        "markdown":"javascriptreact"
    },
    "emmet.syntaxProfiles":{
        "postcss":"css"
    },
    "emmet.triggerExpansionOnTab": true,// 输入文本按下tab转为标签
   

    // 自动保存 "off" | "onFocusChange"(失焦保存) | "afterDelay"（自动保存，且设置files.autoSaveDelay的时间）
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1,
    "fileheader.Author": "caifree",
    "fileheader.LastModifiedBy": "caifree",

    "grunt.autoDetect": "on",
    "git.enableSmartCommit": true,
    "git.autofetch": true,

    "html.mirrorCursorOnMatchingTag": true,
    //html标签属性是否换行
    "html.format.wrapAttributes": "aligned-multiple",

    "iceworks.materialSources": [],
    "iceworks.workspace": "/Users/caihongquan/Project",

    "javascript.format.enable": true, // 编辑器默认的代码检查规则关闭
    "javascript.implicitProjectConfig.experimentalDecorators": true,
    // 让函数（名）和后面的括号之间加个空格
    "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
    // 以下配置4项，文件移动可自动更新文件路径，可以使用绝对路径@，但需要在.tsconfig/.jsconfig文件中配置绝对路径，才可使用。
    "javascript.preferences.importModuleSpecifier": "non-relative",
    "typescript.preferences.importModuleSpecifier": "non-relative",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.updateImportsOnFileMove.enabled": "always",

    "json.schemas": [],

    //cmd服务器打开
    "liveServer.settings.AdvanceCustomBrowserCmdLine": "",
    "liveServer.settings.donotShowInfoMsg": true,
    "leetcode.endpoint": "leetcode-cn",
    "leetcode.outputFolder": "${difficulty}",
    "leetcode.hint.configWebviewMarkdown": false,
    "leetcode.workspaceFolder": "/Users/tangyu/.leetcode",
    "leetcode.hint.commandShortcut": false,
    "leetcode.defaultLanguage": "javascript",
    "leetcode.filePath": {
      "default": {
        "folder": "",
        "filename": "${id}.${kebab-case-name}.${ext}"
      }
    },

    "openFormGenerator.src": "https://mrhj.gitee.io/form-generator/#/",

    // 关于@src目录路径提示的配置
    // 安装vscode插件 `Path Intellisense`
    "path-intellisense.mappings": {
      "@": "${workspaceRoot}/src"
    },

    "security.workspace.trust.untrustedFiles": "open",
    "search.showLineNumbers": true,
    "sync.gist": "77d05e91b98053654bc04632e19fc3ad",//文件打开，个性化配置，结合 workbench.editor.enablePreview": false,
    "sync.quietSync": false,
    "sync.removeExtensions": true,
    "sync.syncExtensions": true,
    "sync.autoDownload": false,
    "sync.autoUpload": false,
    "sync.forceDownload": false,
    "stylelint.config": {},

    "terminal.integrated.splitCwd": "initial",
    "tslint.autoFixOnSave": true,
    "tslint.alwaysShowStatus": true,
    "typescript.tsdk": "/usr/local/lib/node_modules/typescript/lib",
    // tailwindCSS功能类（未内置，需下载扩展），集成如 pt-4样式类，
    "tailwindSCC.emmetCompletions":true,
    "tailwindSCC.validate":true,
   
    "window.autoDetectHighContrast": false,
    "window.doubleClickIconToClose": true,
    "window.menuBarVisibility": "visible",
    "window.zoomLevel": -1,//编辑器缩放比，ctrl+ ‘-’ | ‘+’
